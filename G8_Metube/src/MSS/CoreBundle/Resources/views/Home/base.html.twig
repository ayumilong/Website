<!DOCTYPE html>
<html lang="en">
  <head>
      {% block head %}
      {% endblock %}
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Welcome to metube</title>

    <!-- Bootstrap core CSS -->
    <link href="{{ asset('bundles/msscore/css/bootstrap.min.css') }}" rel="stylesheet">

    <!-- Just for debugging purposes. Don't actually copy this line! -->
    <!--[if lt IE 9]><script src="../../assets/js/ie8-responsive-file-warning.js"></script><![endif]-->

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

    <!-- Custom styles for this template -->
    <link href="{{ asset('bundles/msscore/css/carousel.css') }}" rel="stylesheet">
    <style type="text/css">
        .wordcloud {
            width: 100vh;
            height:100vh;
            background-color:#ffffff;
        }
    </style>
    {% block stylesheet %}
    {% endblock %}
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="{{ asset('bundles/msscore/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bundles/msscore/js/jquery.mousewheel.min.js') }}"></script>
    <script src="{{ asset('bundles/msscore/js/jquery.tagsphere.min.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('div.wordcloud').hide();
            
            $('#searchBar').focus(function() {
                $('div.wordcloud').show();
                $(document).bind('focusin.wordcloud click.wordcloud',function(e) {
                    if ($(e.target).closest('.wordcloud, #searchBar').length) return;
                    $(document).unbind('.wordcloud');
                    $('div.wordcloud').fadeOut('fast');
                });
            });
            
            $('#ts1').tagcloud({centrex:300,centrey:320});
            
        });
        
    </script>
    {% block javascript %}
    {% endblock %}
  </head>
  
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <a href="{{url('mss_core_homepage')}}"><img class="navbar-brand" src="{{ asset('bundles/msscore/images/metube.png') }}"></a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li><a href="{{url('mss_core_homepage')}}">HOME</a></li>
            <li>
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">CATEGORIES <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href="{{url('mss_core_cate_images')}}">Images</a></li>
                <li><a href="{{url('mss_core_cate_audios')}}">Audios</a></li>
                <li><a href="{{url('mss_core_cate_texts')}}">Texts</a></li>
                <li><a href="{{url('mss_core_cate_videos')}}">Videos</a></li>

              </ul>
            </li>
            <li>
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">ABOUT <b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li><a href="{{url('mss_core_homepage2')}}">Organize homepage by most viewed medias</a></li>
                    <li><a href="{{url('mss_core_media_fsearch')}}">Feature-based media search</a></li>
                </ul>
            </li>
          </ul>
          <form id="searchForm" class="navbar-form navbar-right" action="{{path('mss_core_media_ksearch',{'key':'key'})}}" role="search">
            <div class="form-group">
              <input id="searchBar" name="searchBar" type="text" class="form-control" placeholder="Search">
              <button class="form-control" id="searchBtn" type="submit" class="btn btn-default">SEARCH</button>
            </div>
          </form>
           
          <ul class="nav navbar-nav navbar-right">
              <li>
                  {%block userLogin%}
                    {% if app.session.get('uname') is empty %}
                        <a href="{{url('mss_core_user_login')}}">Log In</a>
                    {% else %}
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="username">{{app.session.get('uname')}} <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                          <li><a href="{{url('mss_core_media_uploadSel')}}">Upload</a></li>
                          <li><a href="{{ url('mss_core_list_play')}}">Playlist</a></li>
                          {% if messagesno is defined %}
                          <li><a href="{{ url('mss_core_message_list')}}">Inbox&nbsp;<span id="messageno" class="badge badge-success">{{messagesno}}</span></a></li>
                          {% else %}
                          <li><a href="{{ url('mss_core_message_list')}}">Inbox&nbsp;</a></li>
                          {% endif %}
                          <li><a href="{{url('mss_core_user_profile')}}">Account</a></li>
                          <li><a href="{{ url('mss_core_discussion_listg') }}">Discussion</a></li>
                          <li><a href="{{url('mss_core_user_logout')}}">Log out</a></li>
                        </ul>
                    {% endif %}
                  {%endblock%}
              </li>
          </ul>  
        </div>

      </div>
    </div>
    
    <div style="margin-left:20%">  
    <div id="ts1" class="wordcloud">
    <ul>
        {% for item in app.session.get('wordcloud') %}
        {% set rel = random([1,5,15,20])%}
        <li><a href="{{path('mss_core_media_cksearch',{'key':item})}}" rel="{{rel}}">{{item|upper}}</a></li>
        {% endfor %}
    </ul>
    </div> 
    </div>

    {% block content %}
    {% endblock %}
      
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->

  </body>
</html>
