{% extends 'MSSCoreBundle:Home:base.html.twig' %}

{% block stylesheet %}
<style type="text/css">
    /*
 * Base structure
 */

    /* Move down content because we have a fixed navbar that is 50px tall */
    body {
        padding-top: 50px;
    }


    /*
     * Global add-ons
     */

    .sub-header {
        padding-bottom: 10px;
        border-bottom: 1px solid #eee;
    }


    /*
     * Sidebar
     */

    /* Hide for mobile, show later */
    .sidebar {
        display: none;
    }
    @media (min-width: 768px) {
        .sidebar {
            position: fixed;
            top: 51px;
            bottom: 0;
            left: 0;
            z-index: 1000;
            display: block;
            padding: 20px;
            overflow-x: hidden;
            overflow-y: auto; /* Scrollable contents if viewport is shorter than content. */
            background-color: #f5f5f5;
            border-right: 1px solid #eee;
        }
    }

    /* Sidebar navigation */
    .nav-sidebar {
        margin-right: -21px; /* 20px padding + 1px border */
        margin-bottom: 20px;
        margin-left: -20px;
    }
    .nav-sidebar > li > a {
        padding-right: 20px;
        padding-left: 20px;
    }
    .nav-sidebar > .active > a {
        color: #fff;
        background-color: #428bca;
    }


    /*
     * Main content
     */

    .main {
        padding: 20px;
    }
    @media (min-width: 768px) {
        .main {
            padding-right: 40px;
            padding-left: 40px;
        }
    }
    .main .page-header {
        margin-top: 0;
    }


    /*
     * Placeholder dashboard ideas
     */

    .placeholders {
        margin-bottom: 30px;
        text-align: center;
    }
    .placeholders h4 {
        margin-bottom: 0;
    }
    .placeholder {
        margin-bottom: 20px;
    }
    .placeholder img {
        display: inline-block;
        border-radius: 50%;
    }

</style>
{% endblock %}

{% block javascript %}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="{{ asset('bundles/msscore/js/jquery.base64.min.js') }}"></script>
<script src="{{ asset('bundles/msscore/js/jquery.tagsphere.min.js') }}"></script>
<script type="text/javascript">
    var msender = '';
    var mreceivor = '';
    var msubject = '';
    var mcontent = '';
    var mmessageid = '';
    var msendtime = '';
        
    $(document).ready(function() {
        
        $('#messageDetail').hide();
        
        $('.createMessageForm').submit(function(e) {
            e.preventDefault();

            var encodecontent = $.base64.encode($('#newcontent').val());
            $('#encodecontent').val(encodecontent);
            
            $.ajax({
                    type: "POST",
                    url: $('.createMessageForm').attr('action'),
                    data: $(this).serialize(),
                    cache: false,
                    success: function(data) {
                        //console.log(data);
                    }
            });
        });
        
        $('#readStatueForm').submit(function(e) {
            e.preventDefault();
            
            $.ajax({
                type: "POST",
                url: $('#readStatueForm').attr('action'),
                data: $(this).serialize(),
                cache: false,
                success: function(data) {
                    console.log(data);
                }
            });
        });
        
        $('.replyMessageForm').submit(function(e) {
            e.preventDefault();

            var encodecontent = $.base64.encode($('#replyContent').val());
            $('#encodeReplyContent').val(encodecontent);
            
            $.ajax({
                type: "POST",
                url: $('.replyMessageForm').attr('action'),
                data: $(this).serialize(),
                cache: false,
                success: function(data) {
                    //console.log(data);
                }
            });
        });
    });

    function showDetail(messageid, sender, receivor, subject, content, sendtime) {
        mmessageid = messageid;
        msender = sender;
        mreceivor = receivor;
        msubject = subject;
        mcontent = content;
        msendtime = sendtime;
        
        //show message
        $('#sender').text(msender);
        $('#receivor').text(mreceivor);
        $('#subject').text(msubject);
        var temp1 = $.base64.decode(mcontent);
        $('#content').text(temp1);
        $('#sendtime').text(msendtime);
        
        //modify message isread statue
        $('#isreadstatue').val(mmessageid);
        $('#receiveTimeStatue').val(new Date());
        $('#readStatueForm').submit();
        
        //prepare reply message 
        $('#replyReceivor').val(msender);
        $('#replySubject').val("Re:" + msubject);
        
        var temp2 = '\n\n---------------------------------------------------------------------------------\n' + 'from:' + msender + '\nto:' +mreceivor + '\nsubject:' + msubject + '\nsendtime:' + msendtime + '\ncontent:\n\n' +temp1;
        $('#replyContent').val(temp2);
        $('#messageDetail').show();
    }
    
</script>
{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
            <ul class="nav nav-sidebar">
                <li>
                    <button class="btn btn-default" data-toggle="modal" data-target="#myModal" style="margin-left:25%; margin-bottom:3%">Compose</button>
                </li>
                <li class="active"><a href="#">Inbox</a></li>
                {% for message in messages %}
                {% if message.isread == 0 %}
                <li><button class="btn btn-link" style="margin-left:3%" onclick="showDetail('{{message.messageid}}','{{message.sender.username}}','{{message.receivor.username}}','{{message.subject}}','{{message.content}}','{{message.sendtime|date('Y-m-d')}}');">{{message.subject}}</button><span class="label label-info">new</span></li>
                {% else %}
                <li><button class="btn btn-link" style="margin-left:3%" onclick="showDetail('{{message.messageid}}','{{message.sender.username}}','{{message.receivor.username}}','{{message.subject}}','{{message.content}}','{{message.sendtime|date('Y-m-d')}}');">{{message.subject}}</button></li>
                {% endif %}
                {% endfor %}
            </ul>
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main" id="messageDetail">
            <table>
                <tr>
                    <td><h6><label for="sender">From:</label></h6></td>
                    <td><h6 id="sender"></h6><td>
                </tr>
                    <td><h6><span class="text-muted">To:</span></h6></td>
                    <td><h6 id="receivor"></h6>
                </tr>
                <tr>
                    <td><h6><span class="text-muted">Sendtime:</span></h6><td>
                    <td><h6 id="sendtime"></h6></td>
                </tr>
            </table>
            
            <h4 id="subject" class="page-header" style="margin-top:3%"></h4></td>
            <h5 id="content" style="width:100%;height:300px"></h5>
            <button class="btn btn-link" data-toggle="modal" data-target="#myReply"  style="margin-left:0px; padding-left:0px">Reply</button>
        </div>
    </div>
</div>

<form class="replyMessageForm" action="{{path("mss_core_message_reply")}}" method ="POST"  enctype="multipart/form-data">
<input id="replyReceivor" type="hidden" name="replyReceivor"/>
<input id="replySubject" type="hidden" name="replySubject"/>
<div class="modal fade" id="myReply" tabindex="-1" role="dialog" aria-labelledby="myReplyLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myReplyLabel">Reply message</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">    
                    <textarea id="replyContent" style="width:100%;height:300px" class="form-control" autofocus="true"></textarea>
                    <input type="hidden" id="encodeReplyContent" name="replyContent" style="width:100%;height:300px" class="form-control" autofocus="true"></textarea>
                    <div class="form-group">  
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary" >Send</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
</form>

<form class="createMessageForm" action="{{path("mss_core_message_create")}}" method ="POST"  enctype="multipart/form-data">
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">New message</h4>
                </div>
                <div class="modal-body">
                    
                    <div class="form-group">
                        <!--<label for="receivor">To</label>-->
                        <input id="receivor" type="text" name="receivor" class="form-control" placeholder="To: your friend's username"/>
                    </div>

                    <div class="form-group">  
                        <!--<label for="subject">Subject</label>-->
                        <input id="subject" type="text" name="subject" class="form-control" placeholder="Subject"/>
                    </div>

                    <div class="form-group">    
                        <!--<label for="content">Content</label>-->
                        <textarea id="newcontent" style="width:100%;height:300px" class="form-control" placeholder="Content"></textarea>
                        <input type="hidden" id="encodecontent" name="content" value=""/>
                        <div class="form-group">  
                        </div>
                        <div>
                            <button type="submit" class="btn btn-primary" >Send</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</form>

<form id="readStatueForm" action="{{path("mss_core_message_read")}}" method ="POST"  enctype="multipart/form-data">
<input type="hidden" id="isreadstatue" name="isreadstatue"/>
<input type="hidden" id="receiveTimeStatue" name="receiveTimeStatue"/>
</form>
{% endblock %}

{% block fooder %}
{% endblock %}
